<form class="input-form" action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <ul>
        <li class="input-field">
            <label for="title" class="input-label normal-font"
                >title</label
            >
            <input
                type="text"
                id="title"
                name="title"
                class="text-input"
                value="<%= product.title %>"    
            />
        </li>
        <li id="image-input-container" class="input-field">
            <div class="image-input-field input-field">
                <label class="input-label normal-font" for="image"> Image</label>
                <input
                    type="file"
                    name="image"
                    id="product-image"
                    accept="image/jpg, image/png"
                    <% if(imageRequired){ %>
                        required
                    <% } %>
                />
            </div>
            <div id="image-preview-container">
                <img src="" alt="Selected Image." id="selected-image-preview">
            </div>
        </li>
        <li class="input-field">
            <label for="summary" class="input-label normal-font"
                >summary</label
            >
            <input
                type="text"
                id="summary"
                name="summary"
                class="text-input"
                maxlength="250"
                value="<%= product.summary %>"
            />
        </li>
        <li class="input-field">
            <label for="price" class="input-label normal-font"
                >price</label
            >
            <input
                type="number"
                id="price"
                name="price"
                class="text-input"
                step="0.01"
                min="0.01"
                value="<%= product.price %>"
            />
        </li>
        <li class="input-field">
            <label
                class="normal-font input-label"
                for="description"
                >description</label
            >
            <textarea
                class="text-input normal-font"
                name="description"
                id="description"
            ><%= product.description %></textarea>
        </li>
        <li class="input-field action-container">
            <button type="reset" class="normal-font">
                Reset
            </button>
            <button class="normal-font">Save</button>
        </li>
    </ul>
</form>