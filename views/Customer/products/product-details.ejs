        <%- include('../../shared/includes/head', {title: product.title}) %>
        <link rel="stylesheet" href="/styles/item-details.css" />
        <script src="/scripts/cart-management.js" defer></script>
    </head>
    <body>
            <%- include('../../shared/includes/header') %>
        <main>
            <div class="area-container">
                <div class="box-shadow item-image-summary-container">
                    <div class="item-image-container">
                        <img class="box-shadow" src="<%= product.imageUrl %>" alt="" />
                    </div>
                    <div class="item-summary-container">
                        <div class="summary-container">
                            <h1 class="item-name topic-font"><%= product.title %></h1>
                            <p class="item-price normal-font">$<%= product.price %></p>
                        </div>
                        <form action="/buy-item">
                            <button id="add-to-cart-button" class="normal-font add-to-cart-submit" data-productid="<%= product.id %>" data-csrfToken="<%= locals.csrfToken %>">Add to Cart</button>
                        </form> 
                    </div>
                </div>
                <div class="box-shadow item-description-container">
                    <p class="normal-font">
                        <%= product.description %>
                    </p>
                </div>
            </div>
        </main>
        <%- include('../../shared/includes/footer') %>
