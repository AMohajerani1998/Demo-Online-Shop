                            <p class="normal-font">
                                236$ <span class="item-price">(53$)</span>
                            </p>
                        </div>
                        <div class="cart-item-count-box">
                            <form action="/cart/id/update">
                                <input
                                    class="normal-font item-count"
                                    type="number"
                                    id="item-count"
                                    name="item-count"
                                    step="1"
                                />
                                <button class="cart-item-submit">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
